{
  "name": "copy-paste-anywhere",
  "version": "0.1.0",
  "description": "copy-paste-anywhere",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "copy-paste-anywhere",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
